<h1>hellow world </h1>



<h2>search for stocks</h2>
<div id="stock-search">
  <%= form_tag searchstock_path, method: :get, id:"stock-search" do %>
      <div class="form-group col-md-12">
        <div class="col-md-9">
          <%= text_field_tag :stock , params[:stock], placeholder: "search" , autofocus: true,  class: "form-control"  %>
        </div>
        <div class="col-lg-3">
          <%= button_tag(type: :submit, class:" btn btn-lg btn-success") do %>
                 hello
            <% end %>
        </div>
  </div>
  <% end %>
</div>
<h3>we have found <%= @stock.count %> titles related to <%=@data%></h3>
<table class="table table-dark">
  <tbody>
    <% @stock.each do |title |%>
    <tr>
      <td><%= title %> <%= link_to "read" , search_in_google_path("title": title) , class: "btn btn-default" %></td>
    <%end%>
    </tr>
  </tbody>
</table>
